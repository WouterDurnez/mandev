---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalNav from '../components/TerminalNav.astro';
import AuthForm from '../components/AuthForm.tsx';

const navItems = [
  { label: 'home', href: '/' },
  { label: 'login', href: '/login' },
  { label: 'signup', href: '/signup' },
];
---

<BaseLayout title="Sign Up">
  <TerminalNav items={navItems} active="signup" />
  <main class="max-w-terminal mx-auto px-4 py-16">
    <pre class="text-terminal-dim text-sm mb-4">$ mandev signup</pre>
    <AuthForm mode="signup" client:load />
  </main>
</BaseLayout>
