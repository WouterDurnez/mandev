---
import '../styles/global.css';

interface Props {
  title: string;
  scheme?: string;
  font?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogUrl?: string;
}

const { title, scheme = 'dracula', font = 'JetBrains Mono', ogTitle, ogDescription, ogImage, ogUrl } = Astro.props;
---

<!doctype html>
<html lang="en" data-scheme={scheme}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} — man.dev</title>
    <meta name="description" content={ogDescription || "man.dev — your developer identity, version controlled."} />
    {ogTitle && <meta property="og:type" content="profile" />}
    {ogTitle && <meta property="og:title" content={ogTitle} />}
    {ogDescription && <meta property="og:description" content={ogDescription} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    {ogUrl && <meta property="og:url" content={ogUrl} />}
    {ogTitle && <meta name="twitter:card" content="summary_large_image" />}
    {ogTitle && <meta name="twitter:title" content={ogTitle} />}
    {ogDescription && <meta name="twitter:description" content={ogDescription} />}
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    <style set:html={`body { font-family: '${font}', monospace; }`} />
    <link rel="icon" href="/favicon.svg" />
    <script is:inline>
      (function () {
        var mode = localStorage.getItem('mandev-mode');
        if (!mode) {
          mode = window.matchMedia('(prefers-color-scheme: light)').matches
            ? 'light'
            : 'dark';
        }
        document.documentElement.setAttribute('data-mode', mode);
      })();
    </script>
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>
